<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <% else %>
  <div>
    <div>
      <h1>Welcome</h1>
      <%= link_to 'Sign up now!', signup_path %>
    </div>
  </div>
  <li><%= link_to 'Signup', signup_path%></li>
<li><%= link_to 'Login', login_path%></li>
<% end %>
